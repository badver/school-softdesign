<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/profile_text_element">

        <!--<TextView-->
        <!--android:id="@+id/add_user_txt_firstname_value"-->
        <!--style="@style/font.medium"-->
        <!--android:text="@string/dialog.add_user.text.firstname"/>-->

        <!--<TextView-->
        <!--android:id="@+id/add_user_txt_firstname_label"-->
        <!--style="@style/font.regular"-->
        <!--android:text="@string/dialog.add_user.label.firstname"-->
        <!--android:textAlignment="viewStart"/>-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_user_et_firstname_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_user_et_firstname_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog.add_user.label.firstname"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <View style="@style/profile_strip"/>

    <LinearLayout
        style="@style/profile_text_element">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_user_et_lastname_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_user_et_lastname_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog.add_user.label.lastname"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Spinner
        android:id="@+id/team_spinner"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
